@namespace StackNServe.Shared

<div class="Order">
    <div class="Order_Content">
        <h6 class="Order_Greeting">Hello! Could I have a burger with:</h6>
        @* Preparing an order list with variable list *@
        <div class="Order_List">
            @foreach (var item in Order_List)
            {
                @item
                <br>
            }
        </div>
        <h6 class="Order_Price">I will pay Rs. @Order_Price for this.</h6>
    </div>
</div>

<link href="src/Shared/Order.razor.css" rel="stylesheet">
<link href="'https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

@code 
{
    [Parameter]
    public List<string> Order_List { get; set; }

    [Parameter]
    public int Order_Price { get; set; }
}